<%= form_for(@issue) do |f| %>
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% @issue.errors.full_messages.each do |msg| %>
        <li class="error"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Month %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Link %> to online version<br />
    <%= f.text_field :m_link %>
  </div>
  <div class="field">
      <%= f.label :Magazine, "Photo" %> cover photo (163px by 210px)<br />
      <%= f.file_field :photo %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
